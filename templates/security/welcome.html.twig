{% extends 'base.html.twig' %}

{% block body %}
{% if app.user %}
    <div class="w-full max-w-md bg-white rounded-lg shadow-xl p-6 mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Welcome {{ app.user.email }}</h2>
        <p class="text-lg text-gray-600 mb-6">You are successfully logged in.</p>
        <a href="{{ path('logout') }}" class="w-full bg-red-500 hover:bg-red-600 text-white font-bold p-2 rounded-lg shadow-lg transition">
            Logout
        </a>
    </div>
{% else %}
    <script>
        window.location.href = "{{ path('login') }}";
    </script>
{% endif %}
{% endblock %}
